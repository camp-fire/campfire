<% include head.ejs %>
<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container">
        <h1>欢迎回到宿舍~</h1>
        <p>那一年我们一无所有却无比快乐</p>
    </div>
</div>
<div class="container">
    <!-- Example row of columns -->
    <% blogs.forEach(function(blog, index) { %>
    <% if(index % 3 == 0){ %>
    <div class="row">
        <% } %>
        <div class="col-md-4">
            <h2><a href="/users/<%= blog.userName %>"><%= blog.userName %></a> 说</h2>

            <% if(blog.content.length>300) {%>
            <p><%= blog.content.substring(0,300) %>...</p>
            <% }else{ %>
            <p><%= blog.content %></p>
            <% }%>
            <p><small><%= blog.time %></small></p>

            <p><a class="btn btn-default" href="/users/<%= blog.userName%>?kind=detail&_id=<%= blog._id%>" role="button">查看详情 <span class="glyphicon glyphicon-chevron-right"></span></a></p>
        </div>
        <% if((index + 1) % 3 == 0){ %>
    </div>
    <% } %>
    <% }) %>
</div>
<% include foot.ejs %>
